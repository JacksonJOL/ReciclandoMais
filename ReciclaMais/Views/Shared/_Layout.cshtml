<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recicla + </title>
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
   


    <header class="bg-success text-white py-3">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand text-black" href="#">Recicla +</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Usuario" asp-action="Cadastro">Cadastro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Material" asp-action="Index">Materiais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Usuario" asp-action="Ranking">Ranking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Mensagem" asp-action="Conversa">Mensagens</a>
                        </li>
                    </ul>

                    <!-- Verificar se o usuário está autenticado -->
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>


    <!-- Conteúdo principal -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Rodapé -->
    <footer class="bg-success text-white text-center py-3 mt-5">
        <div class="container">
            <p>&copy; 2024 Recicla +. Todos os direitos reservados.</p>
        </div>
    </footer>

    <!-- Scripts do Bootstrap  -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>